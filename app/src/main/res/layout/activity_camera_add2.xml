<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".CameraAddActivity"
        android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="85dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/main_topbar"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/main_topbar">

        <ImageView
                android:layout_width="10.94dp"
                android:layout_height="17.85dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="21.71dp"
                android:layout_marginLeft="30dp"
                app:srcCompat="@drawable/cameraadd_back_button"
                android:id="@+id/cameraadd_back_button"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <ImageView
                android:layout_width="34dp"
                android:layout_height="24.85dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="48.57dp"
                android:layout_marginLeft="36dp"
                app:srcCompat="@drawable/cameraadd2_tv1"/>

        <ImageView
                android:layout_width="252.28dp"
                android:layout_height="33.14dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="21.71dp"
                android:layout_marginLeft="34.57dp"
                app:srcCompat="@drawable/cameraadd2_tv2"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/selectTv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="미분류 상품"
                    android:textColor="#DD6043"
                    android:layout_marginLeft="36dp"
                    android:textSize="12dp"
                    android:fontFamily="@font/notocjk_medium"
                    android:includeFontPadding="false"
                    android:visibility="invisible">
            </TextView>
            <TextView
                    android:id="@+id/selectTv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="1"
                    android:textSize="12dp"
                    android:textColor="#DD6043"
                    android:fontFamily="@font/notocjk_medium"
                    android:includeFontPadding="false"
                    android:visibility="invisible">
            </TextView>
            <TextView
                    android:id="@+id/selectTv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="건이 있습니다."
                    android:textSize="12dp"
                    android:textColor="#DD6043"
                    android:fontFamily="@font/notocjk_medium"
                    android:includeFontPadding="false"
                    android:visibility="invisible">
            </TextView>
            <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            <ImageView
                    android:layout_width="66.57dp"
                    android:layout_height="24.28dp"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="42dp"
                    app:srcCompat="@drawable/cameraadd_select_button"
                    android:id="@+id/cameraAddSelectButton"/>
        </LinearLayout>
        \

        <RelativeLayout
                android:id="@+id/workoutbox"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

            <FrameLayout android:layout_width="wrap_content"
                         android:layout_height="wrap_content">
                <ImageView
                        android:layout_width="365.71dp"
                        android:layout_height="54dp"
                        android:adjustViewBounds="true"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="22.85dp"
                        app:srcCompat="@drawable/cameraadd_label_button"
                        android:id="@+id/cameraAddLabelButton"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="플무원국물떡볶이2인"
                        android:id="@+id/cameraAddLabelButtonTv"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:layout_marginLeft="96.28dp"
                        android:fontFamily="@font/noto_sans_bold">
                </TextView>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="8,900"
                        android:id="@+id/cameraAddLabelButtonTvPrice"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:layout_marginLeft="314.85dp"
                        android:fontFamily="@font/noto_sans_bold">
                </TextView>
            </FrameLayout>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:scrollbars="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />
        <ImageView
                android:layout_width="348.57dp"
                android:layout_height="49.71dp"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                app:srcCompat="@drawable/cameraadd_next_col_button"
                android:id="@+id/cameraAddNextButton"/>

    </LinearLayout>
</LinearLayout>