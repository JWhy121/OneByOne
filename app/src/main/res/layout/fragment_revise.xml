<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="321.71dp"
             android:layout_height="550dp"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="150dp"
             android:background="@android:color/transparent"
             android:orientation="vertical">

    <!-- 타이틀바 -->
    <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:orientation="vertical">


        <ImageView
                android:layout_width="34dp"
                android:layout_height="16.85dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="25.14dp"
                android:adjustViewBounds="true"
                android:src="@drawable/logo_add" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38.85dp"
                    android:fontFamily="@font/notocjk_medium"
                    android:text="어떤 종류의 소비인가요?"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:fontFamily="@font/notocjk_medium"
                    android:text="*"
                    android:textColor="#DD6043"
                    android:textSize="12dp"></TextView>
        </LinearLayout>

        <LinearLayout
                android:layout_width="208.85dp"
                android:layout_height="56.85dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="24.28dp"
                        android:layout_height="24.28dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="1dp"
                        android:layout_marginBottom="34dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_food_normal" />

                <ImageView
                        android:layout_width="24.28dp"
                        android:layout_height="24.28dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="1dp"
                        android:layout_marginBottom="34dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_etc" />

                <ImageView
                        android:layout_width="24.28dp"
                        android:layout_height="24.28dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="1dp"
                        android:layout_marginBottom="34dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_car" />

                <ImageView
                        android:layout_width="24.28dp"
                        android:layout_height="24.28dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="1dp"
                        android:layout_marginBottom="34dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_food_normal" />

                <ImageView
                        android:layout_width="24.28dp"
                        android:layout_height="24.28dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="1dp"
                        android:layout_marginBottom="34dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_etc_selected" />

                <ImageView
                        android:layout_width="24.28dp"
                        android:layout_height="24.28dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="1dp"
                        android:layout_marginBottom="34dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_car" />

                <ImageView
                        android:layout_width="24.28dp"
                        android:layout_height="24.28dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="1dp"
                        android:layout_marginBottom="34dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_car" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="24.28dp"
                        android:layout_height="24.28dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="1dp"
                        android:layout_marginBottom="34dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_etc" />

                <ImageView
                        android:layout_width="24.28dp"
                        android:layout_height="24.28dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="1dp"
                        android:layout_marginBottom="34dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_car" />

                <ImageView
                        android:layout_width="24.28dp"
                        android:layout_height="24.28dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="1dp"
                        android:layout_marginBottom="34dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_food_normal" />

                <ImageView
                        android:layout_width="24.28dp"
                        android:layout_height="24.28dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="1dp"
                        android:layout_marginBottom="34dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_etc" />

                <ImageView
                        android:layout_width="24.28dp"
                        android:layout_height="24.28dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="1dp"
                        android:layout_marginBottom="34dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_car" />
            </LinearLayout>
        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38.85dp"
                android:fontFamily="@font/notocjk_medium"
                android:text="상품명을 입력해주세요"
                android:textColor="@color/black"
                android:textSize="12dp" />

        <EditText
                android:id="@+id/et_name"
                android:layout_width="146.28dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38.85dp"
                android:layout_marginBottom="35.14dp"
                android:ems="10"
                android:fontFamily="@font/notocjk_medium"
                android:hint="등/초밥의 달인"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="12dp" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38.85dp"
                android:fontFamily="@font/notocjk_medium"
                android:text="금액을 입력해주세요"
                android:textColor="@color/black"
                android:textSize="12dp" />

        <EditText
                android:id="@+id/et_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38.85dp"
                android:layout_marginBottom="22.85dp"
                android:ems="10"
                android:fontFamily="@font/notocjk_medium"
                android:hint="3000"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textSize="12dp" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

            <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            <ImageView
                    android:id="@+id/iv_revise"
                    android:layout_width="111.42dp"
                    android:layout_height="36.85dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="34dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/btn_add_complete_normal" />

            <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="111.42dp"
                    android:layout_height="36.85dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="34dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/btn_add_delete" />

            <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>