<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".CalendarFragment"
            android:background="@color/white">

        <ImageView
                android:id="@+id/cal_leftbutton"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="37dp"
                app:layout_constraintRight_toLeftOf="@+id/cal_rightbutton"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:src="@drawable/cal_leftbutton"/>

        <ImageView
                android:id="@+id/cal_rightbutton"
                android:layout_marginRight="28dp"
                android:layout_marginTop="37dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:src="@drawable/cal_rightbutton"/>


        <TextView android:id="@+id/cal_titletext"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:layout_marginTop="42dp"
                  android:layout_marginLeft="45dp"
                  android:fontFamily="@font/notocjk_bold"
                  android:includeFontPadding="false"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintLeft_toLeftOf="parent"
                  android:textSize="23dp"
                  android:text="2022년 03월"
                  android:textColor="@color/black"
                  android:textAlignment="center"/>


        <LinearLayout android:layout_width="405dp"
                      android:layout_height="469dp"
                      android:padding="50dp"
                      android:orientation="vertical"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      app:layout_constraintTop_toBottomOf="@id/cal_titletext"
                      android:id="@+id/cal_box"
                      android:background="@drawable/cal_contentbox">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:id="@+id/cal_daybar"
                          app:layout_constraintTop_toBottomOf="@+id/cal_titletext"
                          app:layout_constraintLeft_toLeftOf="parent"
                          app:layout_constraintRight_toRightOf="parent">


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/notocjk_bold"
                        android:includeFontPadding="false"
                        android:textSize="13dp"
                        android:textColor="#797B7A"
                        android:text="일"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/notocjk_bold"
                        android:includeFontPadding="false"
                        android:textSize="13dp"
                        android:textColor="#797B7A"
                        android:text="월"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/notocjk_bold"
                        android:includeFontPadding="false"
                        android:textSize="13dp"
                        android:textColor="#797B7A"
                        android:text="화"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/notocjk_bold"
                        android:includeFontPadding="false"
                        android:textSize="13dp"
                        android:textColor="#797B7A"
                        android:text="수"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/notocjk_bold"
                        android:includeFontPadding="false"
                        android:textSize="13dp"
                        android:textColor="#797B7A"
                        android:text="목"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/notocjk_bold"
                        android:includeFontPadding="false"
                        android:textSize="13dp"
                        android:textColor="#797B7A"
                        android:text="금"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/notocjk_bold"
                        android:includeFontPadding="false"
                        android:textSize="13dp"
                        android:textColor="#797B7A"
                        android:text="토"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:screenReaderFocusable="false"
                    app:layout_constraintTop_toBottomOf="@id/cal_daybar"
                    android:id="@+id/calendar_list"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="7"
                    tools:listitem="@android:layout/test_list_item"/>


        </LinearLayout>

        <LinearLayout android:layout_width="301dp"
                      android:layout_height="wrap_content"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      app:layout_constraintTop_toBottomOf="@+id/cal_box"
                      android:orientation="horizontal">

            <LinearLayout android:layout_width="90dp"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="#309F5D"
                          android:textSize="13dp"
                          android:fontFamily="@font/notocjk_bold"
                          android:includeFontPadding="false"
                          android:text="총 수입"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/home_inputtext"
                          android:textColor="@color/black"
                          android:textSize="17dp"
                          android:fontFamily="@font/notocjk_medium"
                          android:includeFontPadding="false"
                          android:text="1,220,000"/>
            </LinearLayout>

            <View android:layout_width="wrap_content"
                  android:layout_height="1dp"
                  android:layout_weight="1"/>

            <LinearLayout android:layout_width="90dp"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="#309F5D"
                          android:textSize="13dp"
                          android:fontFamily="@font/notocjk_bold"
                          android:includeFontPadding="false"
                          android:text="총 지출"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/home_outputtext"
                          android:textColor="@color/black"
                          android:textSize="17dp"
                          android:fontFamily="@font/notocjk_medium"
                          android:includeFontPadding="false"
                          android:text="651,000"/>
            </LinearLayout>

            <View android:layout_width="wrap_content"
                  android:layout_height="1dp"
                  android:layout_weight="1"/>

            <LinearLayout android:layout_width="90dp"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="#309F5D"
                          android:textSize="13dp"
                          android:fontFamily="@font/notocjk_bold"
                          android:includeFontPadding="false"
                          android:text="합계"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/home_totaltext"
                          android:textColor="@color/black"
                          android:textSize="17dp"
                          android:fontFamily="@font/notocjk_medium"
                          android:includeFontPadding="false"
                          android:text="569,000"/>
            </LinearLayout>

        </LinearLayout>



        <LinearLayout
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/today_btn"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:text="TODAY"
                    android:textColor="#BDC0BA" />

            <TextView
                    android:id="@+id/month_year_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="AUGUST 2021"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            <Button
                    android:id="@+id/add_btn"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:text="ADD TASK"
                    android:textColor="#BDC0BA" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

