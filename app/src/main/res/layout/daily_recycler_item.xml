<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

            <ImageView
                    android:id="@+id/dailyLabelFood"
                    android:layout_width="24.28dp"
                    android:layout_height="24.28dp"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="37.14dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/daily_label_food"
            />
            <TextView
                    android:id="@+id/titleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="플무원국물떡볶이2인"
                    android:textColor="#DD6043"
                    android:textSize="12dp"
                    android:layout_marginLeft="14.28dp"
                    android:fontFamily="@font/notocjk_medium">
            </TextView>
            <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/priceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="8,900"
                    android:textColor="#DD6043"
                    android:layout_marginRight="38.28dp"
                    android:textSize="12dp"
                    android:fontFamily="@font/notocjk_medium">
            </TextView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>